<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zadanie_2.MainPage">

    <StackLayout>
        <Label Text="Otázka:" FontSize="20"></Label>
        <Label Text="" x:Name="Otazka" FontSize="15"></Label>
        <Label Text="{Binding questionText}" />
        <Label Text="Možnosti:"  FontSize="20"></Label>
        <StackLayout>
            <RadioButton x:Name="MoznostA" Content="" CheckedChanged="MoznostA_CheckedChanged" />
            <RadioButton x:Name="MoznostB" Content="" CheckedChanged="MoznostB_CheckedChanged"/>
            <RadioButton x:Name="MoznostC" Content="" CheckedChanged="MoznostC_CheckedChanged"/>
            <RadioButton x:Name="MoznostD" Content="" CheckedChanged="MoznostD_CheckedChanged"/>

            <Label Text="" x:Name="Spravne_odpovede" FontSize="20"></Label>
            <Label Text="" x:Name="Vsetky_odpovede" FontSize="20"></Label>
            <StackLayout>
                <Button Text="Ďalej" WidthRequest = "200" Clicked="Button_Clicked" />
                <Button Text="Ukončiť" WidthRequest = "200" Clicked="ExitButton_Click"/>
            </StackLayout>
        </StackLayout>
    </StackLayout>

</ContentPage>
