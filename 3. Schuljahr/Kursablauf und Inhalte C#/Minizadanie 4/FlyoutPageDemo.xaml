             x:Class="Minizadanie_4_2.FlyoutPageDemo"
             Title="FlyoutPageDemo">
    <!--FlyoutLayoutBehavior="Popover" pozri krok 42 nastavovanie spravania-->
    
    
        <FlyoutPage.Flyout>
            <ContentPage Title="My App">
